@using System.ComponentModel.DataAnnotations
<NavLink class="flex items-center p-2 text-base font-medium text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group"
         href="@Href" Match="@Match">
   @ChildContent
</NavLink>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter, Required] public string Href { get; set; } = "";
    [Parameter] public NavLinkMatch Match { get; set; } = NavLinkMatch.All;
}
