@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization


<AuthorizeView>
    <Authorized>
        <AuthorizedLayout>
            @Body
        </AuthorizedLayout>
    </Authorized>
    <NotAuthorized>
        <LayoutView Layout="@typeof(UnauthorizedLayout)">
            @Body
        </LayoutView>
    </NotAuthorized>
</AuthorizeView>

