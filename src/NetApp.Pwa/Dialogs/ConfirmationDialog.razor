@inherits DialogBase

<MudDialog>
        <TitleContent>
    @if (Title != null)
    {
            <MudText Typo="Typo.h6">
                @if (IsDelete)
                {
                    <MudIcon Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Class="mr-3 mb-n1" />
                }
                @Title
            </MudText>
    }
        </TitleContent>

    <DialogContent>
        <MudText>@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@CancelButtonText</MudButton>
        <MudButton Color="@(IsDelete? Color.Error:Color.Primary)" Variant="Variant.Filled" OnClick="Submit">@ConfirmButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public string ContentText { get; set; } = "Are you sure you want to continue with this action?";
    [Parameter] public bool IsDelete { get; set; }
    [Parameter] public string? Title { get; set; }
    [Parameter] public string ConfirmButtonText { get; set; } = "Confirm";
    [Parameter] public string CancelButtonText { get; set; } = "Cancel";
    private void Submit()
    {
        Dialog?.Close(DialogResult.Ok(true));
    }
}
